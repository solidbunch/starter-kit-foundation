{
  "name": "solidbunch/starter-kit-foundation",
  "description": "WordPress environment boilerplate for fast and easy start projects with docker containers, convenient credential settings, improved configuration",
  "type": "project",
  "license": "MIT",
  "homepage": "https://starter-kit.io",
  "authors": [
    {
      "name": "SolidBunch Team",
      "email": "contact@solidbunch.com",
      "homepage": "https://solidbunch.com"
    },
    {
      "name": "Yurii Pavlov"
    },
    {
      "name": "Nikita Bolotov"
    }
  ],
  "keywords": [
    "solidbunch",
    "wordpress",
    "starter",
    "starter-kit",
    "boilerplate",
    "environment",
    "template"
  ],
  "support": {
    "issues": "https://github.com/solidbunch/starter-kit-foundation/issues"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "composer",
      "url": "https://solidbunch.github.io/wordpress-core"
    },
    {
      "type": "composer",
      "url": "https://licensing.starter-kit.io/wp-json/skl/v1/"
    },
    {
      "type": "vcs",
      "url": "https://github.com/solidbunch/starter-kit-theme.git",
      "no-api": true
    }
  ],
  "require": {
    "php": ">=8.1",
    "composer/installers": "^2.3.0",
    "solidbunch/composer-installers": "^1.1",
    "solidbunch/basis": "dev-main",
    "solidbunch/monitoring-client": "dev-main",
    "solidbunch/monitoring-server": "dev-main",
    "solidbunch/starter-kit-theme": "dev-master",
    "solidbunch/wordpress-core-no-content": "^6.8.1",
    "wpackagist-plugin/contact-form-7": "^6.0.6",
    "wpackagist-plugin/redirection": "^5.5.2",
    "wpackagist-plugin/svg-support": "^2.5.14",
    "wpackagist-plugin/wordpress-seo": "^25.3.1"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "wpackagist-plugin/rewrite-rules-inspector": "^1.4.0",
    "wpackagist-plugin/query-monitor": "^3.18.0"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true,
    "discard-changes": false,
    "allow-plugins": {
      "composer/installers": true,
      "solidbunch/composer-installers": true
    }
  },
  "extra": {
    "installer-paths": {
      "kit-modules/{$name}/": [
        "type:kit-module"
      ],
      "web/wp-core/": [
        "type:wordpress-core"
      ],
      "web/wp-content/mu-plugins/{$name}": [
        "type:wordpress-muplugin"
      ],
      "web/wp-content/plugins/{$name}": [
        "type:wordpress-plugin"
      ],
      "web/wp-content/themes/{$name}": [
        "type:wordpress-theme"
      ]
    }
  },
  "scripts": {
    "switch-theme-dev": [
      "composer require solidbunch/starter-kit-theme:dev-develop --no-update",
      "composer update solidbunch/starter-kit-theme --no-install --no-interaction --no-progress"
    ],
    "install-dev": [
      "composer install"
    ],
    "install-prod": [
      "composer install --no-dev --prefer-dist --no-interaction --optimize-autoloader"
    ],
    "update-dev": [
      "composer update"
    ],
    "update-prod": [
      "composer update --no-dev --prefer-dist --no-interaction --optimize-autoloader"
    ],
    "post-install-cmd": [
      "@post-script"
    ],
    "post-update-cmd": [
      "@post-script"
    ],
    "post-script": [
      "mkdir -p web/wp-core/wp-content/",
      "cp -r web/wp-config/* web/wp-core || true"
    ]
  },
  "scripts-descriptions": {
    "switch-theme-dev": "CI-only. Switch theme to `dev-develop` and refresh lock for DEV deploys."
  }
}
